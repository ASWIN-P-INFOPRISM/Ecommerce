<section>
    <div class="container mt-4">
        <div class="row mt-3">
            <table class="table" id="usersTable">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email ID</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <th scope="row">{{this.name}}</th>
                        <td>{{this.email}}</td>
                        <td><a class="btn btn-warning" href="/admin/view-user-orders/{{this._id}}" style="width: 3cm;">View Orders</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#usersTable').DataTable();
} );
</script>
