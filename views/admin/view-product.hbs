<section>
    <div class="container mt-4">
        <div class="row">
            <a class="btn btn-success" style="width : 140px; margin-left :auto" href="admin/add-product">Add
                Products</a>
        </div>
        <div class="row mt-3">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">category</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">{{this.category}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.desc}}</td>
                        <td><img style="width : 50px; height : 50px" src="{{this.image}}" alt=""></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>